#!/usr/bin/env bash

VERSION=dev
GIT_COMMIT=dev

echo "Docker builds from the repo, not this dir. Make sure changes are pushed to the repo."
echo "Building version: $VERSION"
# wait 2 seconds
sleep 2

# Build the image with cache busting
docker build --build-arg CACHEBUST=$(date +%s) --build-arg GIT_COMMIT=$GIT_COMMIT -t aitoolkit:$VERSION -f docker/Dockerfile .

# Tag with version and latest
docker tag aitoolkit:$VERSION coco1006/ai-toolkit-easy2use:$VERSION

# Push both tags
echo "Pushing images to Docker Hub..."
docker push coco1006/ai-toolkit-easy2use:$VERSION

echo "Successfully built and pushed coco1006/ai-toolkit-easy2use:$VERSION"

